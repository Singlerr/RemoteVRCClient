<ui:ContentDialog
    x:Class="VRCTower.InviteDialog"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="초대 상세 정보"
    PrimaryButtonText="확인"
    CloseButtonText="취소"
    DefaultButton="Primary">

    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Label Content="월드 ID" />
        <TextBox Name="_worldId" IsEnabled="False" TextWrapping="Wrap" HorizontalContentAlignment="Stretch" />
        <CheckBox Name="_useCurrentLocation" Content="현재 내 위치로 설정" IsChecked="True"
                  Checked="_useCurrentLocation_OnCheckedChanged" Unchecked="_useCurrentLocation_OnCheckedChanged" />
    </StackPanel>

</ui:ContentDialog>